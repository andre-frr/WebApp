@{
    ViewData["Title"] = "Carrinho";
}

<div class="container mt-4">
    <h2 class="text-center"><strong>Carrinho de Compras</strong></h2>
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card shadow-sm mb-3">
                <div class="row g-0">
                    <div class="col-md-3">
                        <img src="~/img/AmaliaPoster.jpeg" height="200px" alt="Ah Amalia Poster">
                    </div>
                    <div class="col-md-9">
                        <div class="card-body d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Bilhete - Ah Amalia</h5>
                                <p class="card-text">Preço: <strong>19,90 €</strong></p>
                                <p class="card-text">Qtd: <strong>1</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-info">CONTINUAR A COMPRAR</a>
        </div>

        <div class="col-md-4">
            <div class="card summary-box shadow-sm p-3">
                <h4><strong>Sumário</strong></h4>
                <p>1 Produto: <strong>19,90 €</strong></p>
                <p class="fs-5">TOTAL: <strong>19,90 €</strong></p>
                <a href="@Url.Action("Index", "Checkout")" class="btn btn-outline-success">FINALIZAR COMPRA</a>
            </div>
        </div>
    </div>
</div>
