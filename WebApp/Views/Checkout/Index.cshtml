@{
    ViewData["Title"] = "Pagamento";
}

<div class="d-flex justify-content-center" style="padding-top: 10vh;">
    <div style="max-width: 600px; width: 100%;">
        <h2 class="text-center"><strong>Pagamento e Faturação</strong></h2>

        <form class="mt-3">
            <div class="d-flex gap-3 mb-3">
                <div class="form-floating flex-fill">
                    <input type="text" class="form-control" id="firstName" placeholder="" required>
                    <label for="firstName">Nome</label>
                </div>
                <div class="form-floating flex-fill">
                    <input type="text" class="form-control" id="surname" placeholder="" required>
                    <label for="surname">Apelido</label>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="email" placeholder="" required>
                <label for="email">Email</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="nif" placeholder="" required>
                <label for="nif">NIF</label>
            </div>

            <div class="mb-3">
                <h5><strong>Método de Pagamento</strong></h5>
                <div class="accordion" id="accordionExample">
                    <div class="accordion-item">
                        <label class="accordion-header" id="headingOne" style="display: flex; align-items: center;">
                            <input type="radio" name="paymentMethod" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-controls="collapseOne" style="margin-right: 10px;">
                            <button class="accordion-button collapsed" type="button">
                                <img src="~/img/payment_Card.webp" style="width: 40px; height: auto; margin-right: 5px;" alt="Cartão de Débito/Crédito" />
                                Cartão de Débito/Crédito
                            </button>
                        </label>
                        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="cardNumber" placeholder="" required>
                                    <label for="cardNumber">Número do Cartão</label>
                                </div>
                                <div class="d-flex gap-3 mb-3">
                                    <div class="form-floating flex-fill">
                                        <input type="text" class="form-control" id="validity" placeholder="" required>
                                        <label for="validity">Validade</label>
                                    </div>
                                    <div class="form-floating flex-fill">
                                        <input type="text" class="form-control" id="CCV" placeholder="" required>
                                        <label for="CCV">CCV</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <label class="accordion-header" id="headingTwo" style="display: flex; align-items: center;">
                            <input type="radio" name="paymentMethod" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-controls="collapseTwo" style="margin-right: 10px;">
                            <button class="accordion-button collapsed" type="button">
                                <img src="~/img/payment_Mbway.webp" style="width: 40px; height: auto; margin-right: 5px;" alt="MBWay" />
                                MBWay
                            </button>
                        </label>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="phoneNumber" placeholder="" required>
                                    <label for="phoneNumber">Nº Telemóvel</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <label class="accordion-header" id="headingThree" style="display: flex; align-items: center;">
                            <input type="radio" name="paymentMethod" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-controls="collapseThree" style="margin-right: 10px;">
                            <button class="accordion-button collapsed" type="button">
                                <img src="~/img/payment_multibanco.webp" style="width: 40px; height: auto; margin-right: 5px;" alt="Multibanco" />
                                Multibanco
                            </button>
                        </label>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                Será gerada uma referência MB válida por 8 horas. A inscrição será feita quando o pagamento for confirmado.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="billingAddress" placeholder="" required>
                <label for="billingAddress">Morada</label>
            </div>
            <div class="d-flex gap-3 mb-3">
                <div class="form-floating flex-fill">
                    <input type="text" class="form-control" id="city" placeholder="" required>
                    <label for="city">Cidade</label>
                </div>
                <div class="form-floating flex-fill">
                    <input type="text" class="form-control" id="postalCode" placeholder="" required>
                    <label for="postalCode">Código Postal</label>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-outline-dark">Confirmar Pagamento</button>
            </div>
        </form>
    </div>
</div>
