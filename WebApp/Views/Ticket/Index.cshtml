@{
    ViewData["Title"] = "Inscrição no Evento";
}

<div class="d-flex justify-content-center" style="padding-top: 10vh;">
    <div style="max-width: 600px; width: 100%;">
        <h2 class="text-center"><strong>Custo de Inscrição: 19,50€</strong></h2>

        <form method="post" class="mt-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="John Doe" required>
                <label for="name">Nome</label>
            </div>

            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
                <label for="email">Email</label>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-outline-dark">Inscrever-me</button>
            </div>
        </form>
    </div>
</div>
