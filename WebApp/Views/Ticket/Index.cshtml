@{
    ViewData["Title"] = "Inscrição";
}

<div class="d-flex justify-content-center" style="padding-top: 10vh;">
    <div style="max-width: 600px; width: 100%;">
        <h2 class="text-center"><strong>Custo de Inscrição: 20,00€</strong></h2>

        <form method="post" class="mt-3">
            <div class="d-flex gap-2 mb-3">
                <div class="form-floating flex-fill">
                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="" required>
                    <label for="firstName">Nome</label>
                </div>
                <div class="form-floating flex-fill">
                    <input type="text" class="form-control" id="surname" name="surname" placeholder="" required>
                    <label for="surname">Apelido</label>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="email" name="email" placeholder="" required>
                <label for="email">Email</label>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-outline-dark">Inscrever-me</button>
            </div>
        </form>
    </div>
</div>
