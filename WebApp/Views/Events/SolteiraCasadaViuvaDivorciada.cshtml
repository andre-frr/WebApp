@model WebApp.Models.ViewModels.Events.EventsViewModel

@{
    ViewData["Title"] = "Solteira Casada Viúva Divorciada";
}

<link rel="stylesheet" href="~/css/events.css">

<div class="event-container">
    <div class="event-header">
        <div class="image-wrapper">
            <img src="@Url.Content(Model.imagem)" alt="@Model.titulo">
        </div>
        <div class="event-details">
            <h1>@Model.titulo</h1>
            <p class="event-classification">
                Classificação: @Model.classificacao<br>
                Tipo: @Model.tipo
            </p>
            <div class="event-notes">
                <h4>Data e Hora: @Model.data_hora.ToString("dd MMM yyyy | HH:mm")</h4>
                <h4>Local: @Model.local_evento</h4>
                <h4>Preço: €@Model.preco.ToString("F2")</h4>
                <h4>Lotação Máxima: @Model.lotacao pessoas</h4>
            </div>
        </div>
    </div>

    <div class="event-description">
        <h2><strong>DESCRIÇÃO</strong></h2>
        <div>@Html.Raw(Model.descricao)</div>
    </div>

    <div class="button-wrapper">
        <a href="#" class="buy-button">ADICIONAR AO CARRINHO</a>
    </div>
</div>