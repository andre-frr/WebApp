@{
    ViewData["Title"] = "Profile";
}

<link rel="stylesheet" href="~/css/user.css">

<div class="main">
    <div class="account-details">
        <h2>Os meus Detalhes</h2>
        <form style="display: flex; flex-direction: column;">
            <div class="form-pair">
                <div class="form-group">
                    <label for="first-name">Nome</label>
                    <input type="text" class="form-control" id="first-name" placeholder="" required>
                </div>
                <div class="form-group">
                    <label for="last-name">Apelido</label>
                    <input type="text" class="form-control" id="last-name" placeholder="" required>
                </div>
            </div>
            <div class="form-pair">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="" required>
                </div>
                <div class="form-group">
                    <label for="birthdate">Data de Nascimento</label>
                    <input type="date" class="form-control" id="birthdate" placeholder="" required>
                </div>
            </div>
            <button type="submit">GUARDAR</button>
        </form>
    </div>

    <div class="account-details">
        <h2>Alterar Password</h2>
        <form style="display: flex; flex-direction: column;">
            <div class="form-group">
                <input type="password" class="form-control" id="current-password" placeholder="Password Atual" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="new-password" placeholder="Password Nova" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="confirm-password" placeholder="Confirmar Password Nova" required>
            </div>
            <button type="submit">GUARDAR</button>
        </form>
    </div>
</div>

<div class="account-details">
    <h2>Detalhes de Faturação</h2>
    <form style="display: flex; flex-direction: column;">
        <div class="form-pair">
            <div class="form-group flex-fill">
                <label for="billingAddress">Morada</label>
                <input type="text" class="form-control" id="billingAddress" placeholder="" required>
            </div>
            <div class="form-group flex-fill">
                <label for="nif">NIF</label>
                <input type="text" class="form-control" id="nif" placeholder="" required>
            </div>
        </div>
        <div class="form-pair">
            <div class="form-group flex-fill">
                <label for="city">Cidade</label>
                <input type="text" class="form-control" id="city" placeholder="" required>
            </div>
            <div class="form-group flex-fill">
                <label for="postalCode">Código Postal</label>
                <input type="text" class="form-control" id="postalCode" placeholder="" required>
            </div>
        </div>
        <button type="submit">GUARDAR</button>
    </form>
</div>
