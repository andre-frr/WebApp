@{
    ViewData["Title"] = "Profile";
}

@model WebApp.Models.ViewModels.User.UserProfileViewModel

<link rel="stylesheet" href="~/css/user.css">

<div class="main">
    <div class="account-details">
        <h2>Os meus Detalhes</h2>
        <form asp-action="UpdateProfile" method="post" style="display: flex; flex-direction: column;">
            <div class="form-pair">
                <div class="form-group">
                    <label asp-for="nome">Nome</label>
                    <input type="text" class="form-control" asp-for="nome" placeholder="" required>
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="apelido">Apelido</label>
                    <input type="text" class="form-control" asp-for="apelido" placeholder="" required>
                    <span asp-validation-for="apelido" class="text-danger"></span>
                </div>
            </div>
            <div class="form-pair">
                <div class="form-group">
                    <label asp-for="email">Email</label>
                    <input type="email" class="form-control" asp-for="email" placeholder="" required>
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="dt_nascimento">Data de Nascimento</label>
                    <input type="date" class="form-control" asp-for="dt_nascimento" required>
                    <span asp-validation-for="dt_nascimento" class="text-danger"></span>
                </div>
            </div>
            <button type="submit">GUARDAR</button>
        </form>
    </div>

    <div class="account-details">
        <h2>Alterar Password</h2>
        <form asp-action="ChangePassword" method="post" style="display: flex; flex-direction: column;">
            <div class="form-group">
                <input type="password" class="form-control" id="current-password" placeholder="Password Atual" name="currentPassword" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="new-password" placeholder="Password Nova" name="newPassword" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="confirm-password" placeholder="Confirmar Password Nova" name="confirmPassword" required>
            </div>
            <button type="submit">GUARDAR</button>
        </form>
    </div>
</div>

<div class="account-details">
    <h2>Detalhes de Faturação</h2>
    <form asp-action="UpdateBillingDetails" method="post" style="display: flex; flex-direction: column;">
        <div class="form-pair">
            <div class="form-group flex-fill">
                <label asp-for="morada">Morada</label>
                <input type="text" class="form-control" asp-for="morada" placeholder="" required>
                <span asp-validation-for="morada" class="text-danger"></span>
            </div>
            <div class="form-group flex-fill">
                <label asp-for="nif">NIF</label>
                <input type="text" class="form-control" asp-for="nif" placeholder="" required>
                <span asp-validation-for="nif" class="text-danger"></span>
            </div>
        </div>
        <div class="form-pair">
            <div class="form-group flex-fill">
                <label asp-for="cidade">Cidade</label>
                <input type="text" class="form-control" asp-for="cidade" placeholder="" required>
                <span asp-validation-for="cidade" class="text-danger"></span>
            </div>
            <div class="form-group flex-fill">
                <label asp-for="cod_postal">Código Postal</label>
                <input type="text" class="form-control" asp-for="cod_postal" placeholder="" required>
                <span asp-validation-for="cod_postal" class="text-danger"></span>
            </div>
        </div>
        <button type="submit">GUARDAR</button>
    </form>
</div>
