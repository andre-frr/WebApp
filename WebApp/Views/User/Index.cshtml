@{
    ViewData["Title"] = "Iniciar Sessão";
}

<div class="d-flex justify-content-center" style="padding-top: 10vh;">
    <div class="w-50" style="max-width: 500px; padding: 20px;">
        <h4 class="text-center">Entra na tua conta Ticketline!</h4>

        <p class="text-center mt-3" style="font-size: 14px;">
            Ainda não tens conta? Regista-te <a href="@Url.Action("Register", "User")">aqui</a>!
        </p>

        <form>
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="email" placeholder="name@example.com" required>
                <label for="email">Email</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="password" placeholder="Password" autocomplete="off" required>
                <label for="password">Password</label>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-outline-dark">Iniciar sessão</button>
            </div>
        </form>
    </div>
</div>
