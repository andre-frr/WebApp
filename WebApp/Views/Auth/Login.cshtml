@{
    ViewData["Title"] = "Iniciar Sessão";
}

<div class="d-flex justify-content-center align-items-start" style="padding-top: 10vh;">
    <div class="w-50" style="max-width: 500px; padding: 20px;">
        <h4 class="text-center"><strong>Entra na tua conta Ticketline!</strong></h4>
        <p class="text-center mt-3" style="font-size:14px">Ainda não tens conta? Regista-te <a href="@Url.Action("Register", "Auth")">aqui</a>!</p>
        <form>
            <fieldset>
                <div>
                    <label for="exampleInputEmail1" class="form-label mt-4"></label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                    <small id="emailHelp" class="form-text text-muted">O teu email nunca será partilhado.</small>
                </div>
                <div>
                    <label for="exampleInputPassword1" class="form-label mt-4"></label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" autocomplete="off">
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-outline-dark">Iniciar sessão</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
