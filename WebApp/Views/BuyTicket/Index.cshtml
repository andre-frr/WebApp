@{
    ViewData["Title"] = "Inscrição no Evento";
}

<div class="d-flex justify-content-center" style="padding-top: 10vh;">
    <div style="max-width: 600px; width: 100%;">
        <h2 class="text-center"><strong>Inscrição</strong></h2>
        <form method="post" class="mt-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" placeholder="John Doe" required>
                <label for="name">Nome</label>
            </div>
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="email" placeholder="name@example.com" required>
                <label for="email">Email</label>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <a href="@Url.Action("Pay", "BuyTicket")" class="btn btn-outline-dark">Inscrever-me</a>
            </div>
        </form>
    </div>
</div>
